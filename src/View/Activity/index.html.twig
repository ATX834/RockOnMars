            </form>
        </div>
        <div class="row text-center mt-3 mb-3">
            <h4>All Activities</h4>
        </div>
        <div class="row mt-3 mb-3 justify-content-center">
            {% for activity in activities %}
                {% include "Components/_card.html.twig" %}
            {% endfor %}
        </div>
    </div>
{% endblock %}