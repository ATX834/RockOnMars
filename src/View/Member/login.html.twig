{% extends 'layout.html.twig' %}

{% block title %}
	Sign up
{% endblock %}

{% block content %}
<h1 class="signup mt-4 text-center">Connectez-vous</h1>
<form method="POST" id="signup" name="signup" class="signup" action="">
<div class="row d-flex justify-content-center">
  <div class="mb-3 text-center col-8">
    <label for="pseudo" class="form-label mt-4">Pseudo</label>
    <input type="text" name="pseudo" class="form-control" id="pseudo" required>
  </div>
  <div class="mb-3 text-center col-8">
    <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1">
  </div>
  <div class="form-group text-center">
	<button type="submit" class="btn btn-primary my-3">Connexion
	</button>
    </div>
    </div>
</form>

{% endblock %}